<?xml version="1.0" encoding="utf-8"?>
<com.beastbike.bluegogo.widget.BGColorView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_unlock_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    app:bgColor="#aa000000">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/common_white"
        app:cardCornerRadius="4dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ll_unlock_code"
            android:layout_width="283dp"
            android:layout_height="223dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:text="@string/map_unlock_code"
                android:textColor="@color/common_black_222222"
                android:textSize="18sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/map_unlock_manual"
                android:textColor="@color/common_grey_4B4B4B"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_unlock_code_border"
                    android:gravity="center"
                    android:textColor="@color/common_blue_0090FF"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_unlock_code_border"
                    android:gravity="center"
                    android:textColor="@color/common_blue_0090FF"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_unlock_code_border"
                    android:gravity="center"
                    android:textColor="@color/common_blue_0090FF"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_unlock_code_border"
                    android:gravity="center"
                    android:textColor="@color/common_blue_0090FF"
                    android:textSize="35sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/map_begin_billing"
                android:textColor="@color/common_grey_9B9B9B"
                android:textSize="13sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</com.beastbike.bluegogo.widget.BGColorView>